<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AlarmSetActivity"
        android:background="@drawable/gradtion"
        >

    <Button
            android:id="@+id/AlarmSetting"
            android:layout_width="157dp"
            android:layout_height="52dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/radius"
            android:text="設定"
            android:textColor="#fffaf0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/musicSpinner" />

    <EditText
            android:id="@+id/SetTime"
            android:layout_width="260dp"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="何時かを入力してください"
            android:inputType="number"
            android:textColor="#fffaf0"
            android:textColorHint="#fffaf0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
            android:id="@+id/SetMinute"
            android:layout_width="260dp"
            android:layout_height="75dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="何分かを入力してください"
            android:inputType="number"
            android:textColor="#fffaf0"
            android:textColorHint="#fffaf0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SetTime" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="24時間表示で入力してください"
            android:textColor="#fffaf0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Switch
            android:id="@+id/musicFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="音楽を固定にする"
            android:textColor="#fffaf0"
            android:textColorHint="#fffaf0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.71"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/snoozeFlag" />

    <Spinner
            android:id="@+id/musicSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:spinnerMode="dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/musicFlag" />

    <Switch
            android:id="@+id/snoozeFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="スヌーズをセットする"
            android:textColor="#fffaf0"
            android:textColorHint="#fffaf0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.675"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SetMinute" />
</androidx.constraintlayout.widget.ConstraintLayout>