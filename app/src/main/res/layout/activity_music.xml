<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MusicActivity"
        android:background="@drawable/gradtion"
        >

    <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:background="#000080"
            android:drawableLeft="@mipmap/moon"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:text=" Sleeping"
            android:textColor="#fffaf0"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

    <ListView
            android:id="@+id/musicListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1"
            />

    <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="#0099cc"
            android:drawableLeft="@mipmap/sun"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:text="Getting up"
            android:textColor="#fffaf0"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/musicListView" />

    <ListView
            android:id="@+id/musicAlarmListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text2" />

</androidx.constraintlayout.widget.ConstraintLayout>