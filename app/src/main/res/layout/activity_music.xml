<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MusicActivity"
        android:background="@drawable/gradtion"
        >

    <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:background="#000080"
            android:drawableLeft="@mipmap/moon"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:text="Night"
            android:textColor="#fffaf0"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ListView
            android:id="@+id/musicListView"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1">

    </ListView>

    <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:background="#0099cc"
            android:drawableLeft="@mipmap/sun"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:text="Morning"
            android:textColor="#fffaf0"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/musicListView" />

    <ListView
            android:id="@+id/musicAlarmListView"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text2">

    </ListView>

    <ImageButton
            android:id="@+id/button"
            android:layout_width="43dp"
            android:layout_height="36dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/text1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/download" />

</androidx.constraintlayout.widget.ConstraintLayout>