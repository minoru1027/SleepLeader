<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradtion"
        tools:context=".MusicDownLoadActivity">

    <ListView
            android:id="@+id/listView"
            android:layout_width="410dp"
            android:layout_height="384dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
            android:id="@+id/selectRadio"
            android:layout_width="364dp"
            android:layout_height="53dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listView">

        <LinearLayout
                android:layout_width="357dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RadioButton
                    android:id="@+id/morningbutton"
                    android:layout_width="180dp"
                    android:layout_height="56dp"
                    android:drawableLeft="@mipmap/sun"
                    android:text="起床時に登録"
                    android:textColor="#fffaf0" />

            <RadioButton
                    android:id="@+id/sleepbutton"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/moon"
                    android:text="就寝時に登録"
                    android:textColor="#fffaf0" />
        </LinearLayout>

    </RadioGroup>

    <Button
            android:id="@+id/insertButton"
            android:layout_width="237dp"
            android:layout_height="40dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/radius"
            android:text="登録"
            android:textColor="#fffaf0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectRadio" />
</androidx.constraintlayout.widget.ConstraintLayout>