<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="f1.sleepLeader">

    <application
            android:name=".SleepLeaderApplication"
            android:allowBackup="true"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:roundIcon="@drawable/icon"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".AlarmEditActivity"></activity>
        <activity android:name=".FadeIn"></activity>
        <activity android:name=".AlarmActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AlarmStopActivity" />
        <activity android:name=".AlarmSetActivity" />
        <activity android:name=".MusicActivity" />

        <receiver android:name=".AlarmReceiver" />

        <activity android:name=".AlarmListActivity" />

        <receiver android:name=".AlarmBroadcastReceiver" />

        <service android:name=".DestroyingService"
            android:stopWithTask="false"/>
    </application>

</manifest>